extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='email') Email:
      input#email.form-control(type='text' placeholder='Email' name='email' required='true' value=(undefined===users ? '' : users.email) )
    div.form-group
      label(for='password') Password:
      input#password.form-control(type='text' placeholder='Password' name='password' value=(undefined===users ? '' : users.password) )
    button.btn.btn-primary(type='submit') Sign In
  if errors 
    ul
      for error in errors
        li!= error.msg